repeat wait() until game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")

local player = game.Players.LocalPlayer

local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))

gui.Name = "ZDX_HUB"

-- Bola flutuante

local toggleBall = Instance.new("TextButton", gui)

toggleBall.Size = UDim2.new(0, 50, 0, 50)

toggleBall.Position = UDim2.new(0, 20, 0.5, -25)

toggleBall.BackgroundColor3 = Color3.fromRGB(0, 120, 255)

toggleBall.Text = "⚽"

toggleBall.TextColor3 = Color3.new(1, 1, 1)

toggleBall.Font = Enum.Font.SourceSansBold

toggleBall.TextSize = 24

toggleBall.ZIndex = 10

-- Painel principal

local frame = Instance.new("Frame", gui)

frame.Size = UDim2.new(0, 320, 0, 200)

frame.Position = UDim2.new(0.5, -160, 0.5, -100)

frame.BackgroundColor3 = Color3.fromRGB(0, 85, 170)

frame.BorderSizePixel = 2

frame.Visible = false

frame.Active = true

frame.Draggable = true

-- Título

local title = Instance.new("TextLabel", frame)

title.Size = UDim2.new(1, 0, 0, 40)

title.BackgroundTransparency = 1

title.Text = "Velocidade"

title.TextColor3 = Color3.new(1, 1, 1)

title.Font = Enum.Font.SourceSansBold

title.TextSize = 24

-- Botão X

local closeBtn = Instance.new("TextButton", frame)

closeBtn.Size = UDim2.new(0, 30, 0, 30)

closeBtn.Position = UDim2.new(1, -35, 0, 5)

closeBtn.Text = "X"

closeBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)

closeBtn.TextColor3 = Color3.new(1, 1, 1)

closeBtn.Font = Enum.Font.SourceSansBold

closeBtn.TextSize = 18

closeBtn.MouseButton1Click:Connect(function()

    frame.Visible = false

end)

toggleBall.MouseButton1Click:Connect(function()

    frame.Visible = not frame.Visible

end)

-- Campo de velocidade

local speedFlag = "speed_value"

local speedLabel = Instance.new("TextLabel", frame)

speedLabel.Size = UDim2.new(1, -10, 0, 30)

speedLabel.Position = UDim2.new(0, 5, 0, 50)

speedLabel.Text = "Speed: 0"

speedLabel.TextColor3 = Color3.new(1, 1, 1)

speedLabel.BackgroundTransparency = 1

speedLabel.Font = Enum.Font.SourceSansBold

speedLabel.TextSize = 18

local speedBox = Instance.new("TextBox", frame)

speedBox.Size = UDim2.new(1, -10, 0, 30)

speedBox.Position = UDim2.new(0, 5, 0, 90)

speedBox.Text = "0"

speedBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

speedBox.TextColor3 = Color3.new(1, 1, 1)

speedBox.Font = Enum.Font.SourceSansBold

speedBox.TextSize = 18

speedBox.FocusLost:Connect(function()

    local val = tonumber(speedBox.Text)

    if val and val >= 1 and val <= 9999 then

        _G[speedFlag] = val

        speedLabel.Text = "Speed: " .. val

    else

        speedLabel.Text = "Speed: inválido"

    end

end)

-- Aplicar velocidade

local RunService = game:GetService("RunService")

local function applySpeed()

    local char = player.Character

    if not char then return end

    local hum = char:FindFirstChildOfClass("Humanoid")

    if _G.speed_value and hum then

        hum.WalkSpeed = _G.speed_value

    end

end

RunService.RenderStepped:Connect(applySpeed)
